{
  "expo": {
    "name": "booksappexpo",
    "slug": "booksappexpo",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/BAlogo.png",
    "splash": {
      "image": "./assets/Applogo.png",
      "resizeMode": "cover",
      "backgroundColor": "#ECEFEE"
    },
    "updates": {
      "fallbackToCacheTimeout": 0
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true,
      "infoPlist": {
        "NSCameraUsageDescription": "This app uses camera to capture photos.",
        "NSLocationWhenInUseUsageDescription": "This app uses location",
        "NSPhotoLibraryUsageDescription": "This app uses Photo Library for selecting photos",
        "NSMicrophoneUsageDescription": "Microphone used for recording voice notes"
      }
    },
    "android": {
      "googleServicesFile": "./google-services.json",
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#FFFFFF"
      },
      "softwareKeyboardLayoutMode": "pan",
      "permissions": [
        "CAMERA",
        "ACCESS_FINE_LOCATION",
        "READ_EXTERNAL_STORAGE",
        "WRITE_EXTERNAL_STORAGE",
        "ACCESS_BACKGROUND_LOCATION"
      ],
      "package": "com.example.BooksApp"
    },
    "web": {
      "favicon": "./assets/favicon.png"
    },
    "plugins": [
      [
        "expo-notifications",
        {
          "icon": "./local/assets/notification-icon.png",
          "color": "#ffffff",
          "sounds": [
            "./local/assets/notification-sound.wav",
            "./local/assets/notification-sound-other.wav"
          ]
        }
      ]
    ]
  }
}

